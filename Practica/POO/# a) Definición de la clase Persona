
# a) Definición de la clase Persona

class Persona:
    def __init__(self, nombre, edad):
        self.nombre = nombre
        self.edad = edad

    def saludar(self):
        print(f"Hola, me llamo {self.nombre} y tengo {self.edad} años.")

# Ejemplo de uso
persona1 = Persona("Juan", 25)
persona2 = Persona("Ana", 30)

persona1.saludar()
persona2.saludar()
